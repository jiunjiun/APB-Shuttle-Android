<resources>
    <!-- Base Index theme -->
    <style name="index_theme">
        <item name="android:textColor">#fff</item>
        <item name="android:layout_gravity">center_horizontal</item>
    </style>

        <style name="index_logo" parent="index_theme">
            <item name="android:paddingBottom">10sp</item>
        </style>

        <style name="index_depart" parent="index_theme">
            <item name="android:textSize">100sp</item>
        </style>

        <style name="index_details" parent="index_theme">
            <item name="android:textSize">30sp</item>
            <item name="android:paddingBottom">30sp</item>
        </style>

        <style name="index_paginate" parent="index_theme">
            <item name="android:textSize">30sp</item>
            <item name="android:paddingLeft">20sp</item>
            <item name="android:paddingRight">20sp</item>
        </style>

    <!-- Base APB and Orange theme. -->
    <style name="bus_table">
        <item name="android:textColor">#fff</item>
        <item name="android:layout_gravity">center_horizontal</item>
    </style>

        <style name="bus_table_title" parent="bus_table">
            <item name="android:textSize">50sp</item>

            <item name="android:paddingTop">40sp</item>
            <item name="android:paddingBottom">20sp</item>
        </style>

    <!-- Base About theme. -->
    <style name="about_header" parent="bus_table">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">130sp</item>
        <item name="android:paddingTop">15sp</item>
        <item name="android:paddingBottom">25sp</item>
        <item name="android:background">#00897B</item>
    </style>

    <style name="about_icon" parent="bus_table">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">70sp</item>
        <item name="android:src">@drawable/icon</item>
    </style>

    <style name="drawer_list_text">
        <item name="android:textSize">26sp</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_margin">10sp</item>
    </style>
</resources>
